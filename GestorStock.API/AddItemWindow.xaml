<Window x:Class="GestorStock.API.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorStock.API"
        mc:Ignorable="d"
        Title="Agregar Ítem y Repuestos" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Tipo de Explotación:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <ComboBox x:Name="TipoExplotacionComboBox" Grid.Row="0" Grid.Column="1" Margin="5" DisplayMemberPath="Nombre"/>

        <Label Content="Tipo de Ítem:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <ComboBox x:Name="TipoItemComboBox" Grid.Row="1" Grid.Column="1" Margin="5" DisplayMemberPath="Nombre"/>

        <Label Content="Nombre del Ítem:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="NombreItemTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Label Content="Tipo de Repuesto:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <ComboBox x:Name="TipoRepuestoComboBox" Grid.Row="3" Grid.Column="1" Margin="5" DisplayMemberPath="Nombre"/>

        <Label Content="Repuesto:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="RepuestoTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <Label Content="Cantidad:" Grid.Row="5" Grid.Column="0" Margin="5"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="CantidadTextBox" Width="100"/>
            <Button x:Name="AddRepuestoButton" Content="Agregar Repuesto" Margin="10,0,0,0"/>
            <Button x:Name="EditRepuestoButton" Content="Editar Repuesto" Margin="10,0,0,0"/>
            <Button x:Name="DeleteRepuestoButton" Content="Eliminar Repuesto" Margin="10,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="RepuestosDataGrid" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="150"/>
                <DataGridTextColumn Header="Tipo de Repuesto" Binding="{Binding TipoRepuesto.Nombre}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="AcceptButton" Content="Aceptar" Width="80" Margin="5"/>
            <Button x:Name="CancelButton" Content="Cancelar" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>