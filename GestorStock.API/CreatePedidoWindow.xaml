<Window x:Class="GestorStock.API.CreatePedidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorStock.API"
        mc:Ignorable="d"
        Title="Crear Pedido" Height="550" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Descripción del Pedido:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="DescripcionTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>

        <CheckBox x:Name="IncidenciaCheckBox" Content="¿Tiene incidencia?" Grid.Row="1" Grid.Column="0" Margin="5,10,5,5" VerticalAlignment="Center" />

        <Label Content="Fecha de la Incidencia:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <DatePicker x:Name="IncidenciaDatePicker" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <Label Content="Descripción de la Incidencia:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="DescripcionIncidenciaTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>

        <Label Content="Items del Pedido:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AddItemButton" Content="Agregar Item" Width="120" Margin="5"/>
            <Button x:Name="EditItemButton" Content="Editar Item" Width="120" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="ItemsDataGrid" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="5"
                  AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Items}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tipo de Ítem" Width="150" Binding="{Binding TipoItem.Nombre}"/>
                <DataGridTextColumn Header="Explotación" Width="150" Binding="{Binding TipoExplotacion.Nombre}"/>
                <DataGridTextColumn Header="Nombre del Ítem" Width="200" Binding="{Binding NombreItem}"/>
                <DataGridTextColumn Header="Repuestos" Width="300" Binding="{Binding RepuestosFormateados}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="AcceptButton" Content="Aceptar" Width="80" Margin="5"/>
            <Button x:Name="CancelButton" Content="Cancelar" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>