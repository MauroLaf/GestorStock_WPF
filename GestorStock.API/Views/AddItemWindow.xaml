<Window x:Class="GestorStock.API.Views.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Repuesto"
        Width="700" Height="420"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Familia:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="cmbFamilia" Grid.Row="0" Grid.Column="1" DisplayMemberPath="Nombre"
                       SelectionChanged="cmbFamilia_SelectionChanged" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ubicación:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="cmbUbicacion" Grid.Row="1" Grid.Column="1" DisplayMemberPath="Nombre" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Proveedor:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="cmbProveedor" Grid.Row="2" Grid.Column="1" DisplayMemberPath="Nombre" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Tipo Soporte:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="cmbTipoSoporte" Grid.Row="3" Grid.Column="1" DisplayMemberPath="Nombre" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Tipo Repuesto:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="cmbTipoRepuesto" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Nombre:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox   x:Name="txtNombre" Grid.Row="5" Grid.Column="1" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Descripción:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox   x:Name="txtDescripcion" Grid.Row="6" Grid.Column="1"/>
        </Grid>

        <!-- Botonera -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Cantidad:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtCantidad" Width="60" Text="1" Margin="0,0,12,0"/>
            <TextBlock Text="Precio:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtPrecio" Width="80" Text="0" Margin="0,0,12,0"/>
            <Button Content="Agregar" Click="BtnAgregar_Click" Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button Content="Cancelar" IsCancel="True" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
