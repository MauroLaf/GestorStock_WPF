<Window x:Class="GestorStock.API.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:GestorStock.API.Converters"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:PedidoTotalConverter x:Key="PedidoTotalConverter"/>
        <conv:RepuestosTotalConverter x:Key="RepuestosTotalConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <ComboBox x:Name="FamiliaComboBox"
                      Width="240" DisplayMemberPath="Nombre" Margin="0,0,8,0"/>
            <ComboBox x:Name="TipoSoporteComboBox"
                      Width="200" DisplayMemberPath="Nombre" Margin="0,0,8,0"/>
            <Button  x:Name="BuscarButton"  Content="Buscar"
                     Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button  x:Name="LimpiarButton" Content="Limpiar"
                     Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

        <!-- Pedidos -->
        <DataGrid x:Name="PedidosDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- Rojo si vencido -->
                        <DataTrigger Binding="{Binding EstaVencido}" Value="True">
                            <Setter Property="Background" Value="#FFFFD6D6"/>
                            <Setter Property="ToolTip" Value="¡Pedido vencido!"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaCreacion, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridCheckBoxColumn Header="Incidencia" Binding="{Binding Incidencia}" Width="100"/>
                <DataGridTextColumn Header="Llegada" Binding="{Binding FechaLlegada, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Total"
                                    Binding="{Binding ., Converter={StaticResource PedidoTotalConverter}}"
                                    Width="120"/>
            </DataGrid.Columns>

            <!-- Detalle: Repuestos -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Margin="0,6,0,6" Padding="8" Background="#FFFFFFB0" CornerRadius="6">
                        <DockPanel LastChildFill="True">
                            <!-- Cabecera del detalle -->
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontWeight="Bold" Text="Nombre"/>
                                <TextBlock Grid.Column="1" FontWeight="Bold" Text="Ubicación"/>
                                <TextBlock Grid.Column="2" FontWeight="Bold" Text="Soporte"/>
                                <TextBlock Grid.Column="3" FontWeight="Bold" Text="Cant."/>
                                <TextBlock Grid.Column="4" FontWeight="Bold" Text="Precio"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Repuestos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="220"/>
                                                <ColumnDefinition Width="160"/>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Nombre}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding UbicacionProducto.Nombre}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding TipoSoporte.Nombre}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Cantidad}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding Precio, StringFormat={}{0:0.00}}"/>
                                            <Button Grid.Column="5" Content="Eliminar"
                                                    Tag="{Binding Id}"
                                                    Click="EliminarRepuesto_Click"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Margin="8,0,0,0"
                                                    HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Botonera -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="CreateButton"        Content="Nuevo"          Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button x:Name="EditButton"          Content="Editar"         Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button x:Name="DeleteButton"        Content="Eliminar"       Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button x:Name="ExportarExcelButton" Content="Exportar Excel" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
