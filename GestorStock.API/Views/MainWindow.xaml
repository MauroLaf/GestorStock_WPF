<Window x:Class="GestorStock.API.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:GestorStock.API.Converters"
        Title="GestorStock"
        Width="1200" Height="720"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:PedidoTotalConverter x:Key="PedidoTotalConverter"/>
        <conv:RepuestosTotalConverter x:Key="RepuestosTotalConverter"/>
    </Window.Resources>


    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FILTROS -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="8,0,0,0"/>
                </Style>
            </StackPanel.Resources>

            <ComboBox x:Name="FamiliaComboBox"  Width="260" DisplayMemberPath="Nombre" Margin="0,0,8,0"/>
            <ComboBox x:Name="TipoSoporteComboBox" Width="220" DisplayMemberPath="Nombre" Margin="0,0,8,0"/>
            <Button x:Name="BuscarButton"  Content="Buscar"  Style="{StaticResource ModernButtonStyle}" Margin="0,0,0,0"/>
            <Button x:Name="LimpiarButton" Content="Limpiar" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

        <!-- PEDIDOS -->
        <DataGrid x:Name="PedidosDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding EstaVencido}" Value="True">
                            <Setter Property="Background" Value="#FFFFD6D6"/>
                            <Setter Property="ToolTip"    Value="¡Pedido vencido!"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"      Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Fecha"   Binding="{Binding FechaCreacion, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Familia" Binding="{Binding Familia.Nombre}" Width="190"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridCheckBoxColumn Header="Incidencia" Binding="{Binding Incidencia}" Width="90"/>
                <DataGridTextColumn Header="Desc. Incidencia" Binding="{Binding DescripcionIncidencia}" Width="220"/>
                <DataGridTextColumn Header="Incidencia Fecha" Binding="{Binding FechaIncidencia, StringFormat={}{0:dd/MM/yyyy}}" Width="130"/>
                <DataGridTextColumn Header="Llegada" Binding="{Binding FechaLlegada, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Total"
                                    Binding="{Binding ., Converter={StaticResource PedidoTotalConverter}}"
                                    Width="120"/>
            </DataGrid.Columns>

            <!-- DETALLE -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid ItemsSource="{Binding Repuestos}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              Background="#FFFFFFB0"
                              Margin="0,6,0,6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre"    Binding="{Binding Nombre}" Width="220"/>
                            <DataGridTextColumn Header="Ubicación" Binding="{Binding UbicacionProducto.Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Soporte"   Binding="{Binding TipoSoporte.Nombre}" Width="160"/>
                            <DataGridTextColumn Header="Cant."     Binding="{Binding Cantidad}" Width="70"/>
                            <DataGridTextColumn Header="Precio"    Binding="{Binding Precio, StringFormat={}{0:0.00}}" Width="100"/>
                            <DataGridTextColumn Header="Tipo"      Binding="{Binding TipoRepuesto}" Width="120"/>
                            <DataGridTemplateColumn Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Eliminar"
                                                Tag="{Binding Id}"
                                                Click="EliminarRepuesto_Click"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Padding="6,2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- BOTONERA (sin Spacing) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="8,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="CreateButton" Content="Nuevo"  Style="{StaticResource ModernButtonStyle}" Margin="0,0,0,0"/>
            <Button x:Name="EditButton"   Content="Editar" Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="DeleteButton" Content="Eliminar" Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="ExportarExcelButton" Style="{StaticResource ModernButtonStyle}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/GestorStock.API;component/Assets/excel.png" Width="16" Height="16" Margin="0,0,6,0"/>
                    <TextBlock Text="Exportar Excel"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>

