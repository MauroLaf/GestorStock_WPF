<Window x:Class="GestorStock.API.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:GestorStock.API.Converters"
        Title="Gestor de Pedidos"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:PedidoTotalConverter x:Key="PedidoTotalConverter"/>
        <conv:RepuestosTotalConverter x:Key="RepuestosTotalConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <ComboBox x:Name="FamiliaComboBox"
                      Width="240" DisplayMemberPath="Nombre" Margin="0,0,8,0"/>
            <ComboBox x:Name="TipoSoporteComboBox"
                      Width="200" DisplayMemberPath="Nombre" Margin="0,0,8,0"/>
            <Button  x:Name="BuscarButton"  Content="Buscar"
                     Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button  x:Name="LimpiarButton" Content="Limpiar"
                     Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

        <!-- Pedidos -->
        <DataGrid x:Name="PedidosDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"            Binding="{Binding Id}"             Width="60"/>
                <DataGridTextColumn Header="Fecha"         Binding="{Binding FechaCreacion}"  Width="140"/>
                <DataGridTextColumn Header="Descripción"   Binding="{Binding Descripcion}"    Width="*"/>
                <DataGridCheckBoxColumn Header="Incidencia" Binding="{Binding Incidencia}"    Width="100"/>
                <DataGridTextColumn Header="Llegada"       Binding="{Binding FechaLlegada}"   Width="140"/>
                <DataGridTextColumn Header="Total"
                                    Binding="{Binding ., Converter={StaticResource PedidoTotalConverter}}"
                                    Width="120"/>
            </DataGrid.Columns>

            <!-- Detalle: Repuestos -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Margin="0,6,0,6" Padding="8" Background="#FFFFFFB0" CornerRadius="6">
                        <ItemsControl ItemsSource="{Binding Repuestos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="True" Margin="0,2">
                                        <TextBlock Width="220" Text="{Binding Nombre}"/>
                                        <TextBlock Width="160" Text="{Binding UbicacionProducto.Nombre}"/>
                                        <TextBlock Width="140" Text="{Binding TipoSoporte.Nombre}"/>
                                        <TextBlock Width="100" Text="{Binding Cantidad}"/>
                                        <TextBlock Width="100" Text="{Binding Precio}"/>
                                        <Button Content="Eliminar"
                                                Tag="{Binding Id}"
                                                Click="EliminarRepuesto_Click"
                                                Style="{StaticResource ModernButtonStyle}"
                                                HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Botonera -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="CreateButton"        Content="Nuevo"          Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button x:Name="EditButton"          Content="Editar"         Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button x:Name="DeleteButton"        Content="Eliminar"       Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
            <Button x:Name="ExportarExcelButton" Content="Exportar Excel" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
